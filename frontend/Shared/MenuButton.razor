@switch (Type)
{
    case 1:
        if (IsSelected)
        {
            <button @onclick=@OnClick>
                <img src="svg/list_selected.svg" />
                <div class="alt selected">List</div>
            </button>
        }
        else
        {
            <button @onclick=@OnClick>
                <img src="svg/list_unselected.svg" />
                <div class="alt">List</div>
            </button>
        }
        break;
    case 2:
        if (IsSelected)
        {
            <button @onclick=@OnClick>
                <img src="svg/home_selected.svg" />
                <div class="alt selected">Home</div>
            </button>
        }
        else
        {
            <button @onclick=@OnClick>
                <img src="svg/home_unselected.svg" />
                <div class="alt">Home</div>
            </button>
        }
        break;
    case 3:
        if (IsSelected)
        {
            <button @onclick=@OnClick>
                <img src="svg/summary_selected.svg" />
                <div class="alt selected">Summary</div>
            </button>
        }
        else
        {
            <button @onclick=@OnClick>
                <img src="svg/summary_unselected.svg" />
                <div class="alt">Summary</div>
            </button>
        }
        break;
    default:
        <div>error</div>
        break;
}